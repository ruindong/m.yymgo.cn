#password_panel {
	margin: 0 0.2rem;
	width: 3.35rem;
	display: none;
	padding: .1rem 0;
	background: #eaeaea;
	z-index: 10000;
	position: absolute;
	top: 1rem;
	display: none;
	-moz-border-radius: 0.05rem;
	-webkit-border-radius: 0.05rem;	
}

.pass {
	font-size: 0.3rem;
	text-align: center;
	width: 0.5rem;
	height: 0.5rem;
	line-height:0.5rem;
	border-left: 1px solid #d0d0d0;
	border-bottom: 1px solid #d0d0d0;
	border-top: 1px solid #d0d0d0;
	background-color: #fff;
	-moz-border-radius: 0;
	-webkit-border-radius: 0;		
}
.pass_right{
	border-right:1px solid #d0d0d0;
}
.btn_number{
	width:33%;
}

.btn_next {
	margin-top: 0.03rem;
	width: 100%;
	background: #0099FF;
}

.btn_next:hover {
	background: coral;
}
