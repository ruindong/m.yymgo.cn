.button{
	font-size: 0.16rem;
}

#keyboard {
	margin: 0;
	padding: 0;
	list-style: none;
}

#keyboard li {
	float: left;
	margin:-1px 2px 2px -1px;
	width: 33%;
	height: 0.45rem;
	line-height: 0.45rem;
	text-align: center;
	background: #fff;
	-moz-border-radius: 0.02rem;
	-webkit-border-radius: 0.02rem;
}

#keyboard .tab {
	width: 33%;
}

#keyboard .cancle {
	width: 33%;
}

#keyboard .delete {
	width: 33%;
}

.on {
	display: none;
}


#keyboard li:hover {
	position: relative;
	top: 1px;
	left: 1px;
	border-color: #e5e5e5;
	background: rgb(242, 219, 201);
	cursor: pointer;
}

.mask {
	margin: 0;
	padding: 0;
	border: none;
	width: 100%;
	height: 100%;
	background: #000;
	opacity: 0.4;
	filter: alpha(opacity=40);
	z-index: 9999;
	position: fixed;
	top: 0;
	left: 0;
	display: none;
}