<body>
	<div class="clr10"></div>
     <div class="mm">
         <div class='bai'> 
         	<input id="PhoneNum" class="mmSJ" type="text" name="userName" placeholder="手机号" />
            <input id="Code" class="yzm" type="text" name="hqyzm" placeholder="验证码" />
            <input class="mmMM" id="psw" type="password" name="newpasswd" placeholder="新密码" />       
            <span id="send_btn" onclick="sendIt();">获取验证码</span>
            <span class="time60">重新发送（60）</span>
         </div>
         <p onclick="new_psw()" class="mmCZ">重置密码</p>
     </div>
<div id="xx"></div>
 <script type="text/javascript">
 
     function sendValidateCode(phoneNo,afterSend) {
            $.getJSON("http://api.yymgo.cn:8080/duobao/sms/retrieve.json?mobile=",{mobile:phoneNo},
                function(res){
                console.debug(res);
                if(res.Success){
                    $toast("验证码发送成功！");
                    afterSend();
                }else{
                    $toast(res.Msg);
                }
        }); 
        }
</script>
</body>
<script>
// 发送验证码
function sendIt()
{
    var mobile= $("#PhoneNum").val();    
    sendCode(mobile, "send_btn");
}

// 密码重置校验
function validateretrieve(){
    var psw = $("#psw").val();

    if(psw.length<1 ){
        $toast("新密码不能为空"); 
        return false;
    }
    if(psw.length < 6 ){
        $toast("密码要大于6位数"); 
        return false;
    }
	return true;
}

// 密码重置
function new_psw(){	
	var mobile= $("#PhoneNum").val();
	var password=$("#psw").val();
	var code=$("#Code").val();
    if(!validateretrieve()){
        return;
    }
   if(!/^[\d]{4}(\d)*$/.test(code)){
		$toast("验证码格式不正确！")
		return;
	}

    // MD5加密
    password = password.MD5(16);

    var updatePwd = new UpdatePwd();
    var params = {
        "mobile": mobile,
        "newPwd": password,
        "code": code
    };

    DataCenter.post(updatePwd, params, updatePwdback);
}
// 密码重置回调函数
function updatePwdback(result, machine){
	if (result.code==0 ){
		$toast("重置密码成功");
		window.location.replace("dl.html");
	}else{
		$toast(result.message);
	}
}

</script>
